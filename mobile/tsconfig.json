{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["assets/*"],
      "@types": ["src/types.ts"]
    },
    "esModuleInterop": true,
    "jsx": "react-native"
  }
}